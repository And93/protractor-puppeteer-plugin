{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
